@model List<LibraryManagementSystem.Models.Book>

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml"; //added this nav
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Admin Dashboard - All Books</h2>
    <div>
        <span class="badge bg-warning me-2">@ViewBag.PendingCount Pending</span>
        <span class="badge bg-success me-2">@ViewBag.ApprovedCount Approved</span>
        <span class="badge bg-danger me-2">@ViewBag.DeclinedCount Declined</span>
    </div>
</div>

<!--Filter Tabs-->
<ul class="nav nav mb-4">
    <li class="nav-item">
        <a class="nav-link" @(ViewBag.Filter =="all" ? "active" : "") href="/Admin?filter=all">
            All Books (@Model.Count)    
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" @(ViewBag.Filter =="pending" ? "active" : "") href="/Admin?filter=pending">
            Pending (@ViewBag.PendingCount)    
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" @(ViewBag.Filter =="approved" ? "active" : "") href="/Admin?filter=approved">
            Approved (@ViewBag.ApprovedCount)    
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" @(ViewBag.Filter =="declined" ? "active" : "") href="/Admin?filter=declined">
            Declined (@ViewBag.DeclinedCount)    
        </a>
    </li>
</ul>

<div class="card">
    <div class="card-body">
        @if (Model.Count == 0)
        {
            <div class="text-center py-5">
                <p class="text-muted">No books found</p>
            </div>
        }
        else
        {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                        Submitted By
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Submission Date
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var book in Model)
                {
                    <tr>
                        <td><strong>@book.Title</strong></td>
                        <td>@book.Author</td>
                        <td>@book.SubmittedBy</td>
                        <td>@book.Category</td>
                        <td>
                            @if (book.Status == LibraryManagementSystem.Models.BookStatus.Pending)
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                            else if (book.Status == LibraryManagementSystem.Models.BookStatus.Approved)
                            {
                                <span class="badge bg-success">Approved</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Declined</span>
                            }
                        </td>
                        <td>@book.SubmittedDate.ToString("MMM dd, yyyy")</td>
                        <td>
                            <a href="/Admin/Review/@book.Id" class="btn btn-sm btn-primary">
                                @(book.Status == LibraryManagementSystem.Models.BookStatus.Pending ? "Review" : "View")
                            </a>
                        </td>
                    </tr>   
                }
            </tbody>
        </table>
        }
    </div>
</div>

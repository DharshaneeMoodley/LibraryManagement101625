@{
    ViewBag.Title = "Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav class="mb-4">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item"><a href="/Books">My Books</a></li>
        <li class="breadcrumb-item">Review</li>
    </ol>
</nav>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header d-flex">
                <h4>Clean Code: A handbook of Agile Software Craftsmanship</h4>
                <span class="badge bg-warning">Pending review</span>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Author</strong></div>
                    <div class="col-sm-9">Robert C Martin</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Category</strong></div>
                    <div class="col-sm-9">Programming</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>ISBN</strong></div>
                    <div class="col-sm-9">780704589365</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-3"><strong>Description</strong></div>
                    <div class="col-sm-9">
                        A comprehensive guide to writing clean, readable, and managable code.
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5>Admin Review</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            Book Cover
                            <a href="#" class="btn btn-sm btn-outline-primary"> View More </a>
                        </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        Table of Contents
                        <a href="#" class="btn btn-sm btn-outline-primary"> View More </a>
                    </div>
                    <div class="list-group-item d-flex justify-content-between align-items-center">
                        Sample Chapter
                        <a href="#" class="btn btn-sm btn-outline-primary"> View More </a>
                    </div>
                    </div>
                </div>
        </div>
        </div>
</div>
<div>
        <div>

        <div class="row">
            <div class="col-lg-12 mc-auto">
                <div class="card">
                    <div class="card-header">
                        <h3>
                            Add Comment 
                        </h3>
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInputDisabled" placeholder="Book Title" disabled>
                                <label for="floatingInputDisabled"> Clean Code: A handbook of Agile Software Craftsmanship</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInputDisabled" placeholder="Author " disabled>
                                <label for="floatingInputDisabled">Robert C Martin</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="floatingInputDisabled" placeholder="Category" disabled>
                                <label for="floatingInputDisabled">Programming </label>
                            </div>
                            <div class="mb-3">
                                <textarea class="form-control" rows="4" placeholder="Leave a comment here"></textarea>
                            </div>
                            

                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="radioDefault" id="radioDefault1" checked>
                                <label class="form-check-label" for="radioDefault1">
                                    Approve
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="radioDefault" id="radioDefault2">
                                <label class="form-check-label" for="radioDefault2">
                                   Reject
                                </label>
                            </div>


                            <div class="d-grip gap-2 d-md-flex justify-content-md-end">
                                <a href="/Books" class="btn btn-secondary me-md-2">Cancel</a>
                                <button type="submit" class="btn btn-primary">Submit Review</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        </div>
</div>

</div>


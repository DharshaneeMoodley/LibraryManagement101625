@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div="row">
    <div class="text-center">
        <h1 class="display-4">
            Library Management System
        </h1>
    </div>
</div>

<!--Librian Section-->
<div class="row">
    <div class="card">
        <div class="card-body text-center">
            <h3 class="card-title"> 
                Librarian Portal
            </h3>
